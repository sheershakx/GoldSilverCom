<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".memberdetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tbllyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="50dp"

                android:orientation="vertical"
                android:stretchColumns="1">


                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Member Id :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/memid_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="PAN :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pan_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Firm Name :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/firmname_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Address :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Proprieter name :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/proname_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/callnow"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/tbllyt"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/callnow" />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/tbllyt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/smsicon2" />

            <ImageView
                android:id="@+id/add_lebhi_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/callnow"
                android:layout_marginStart="20dp"
                android:src="@drawable/add_icon"
                android:tint="#000" />

            <TextView
                android:id="@+id/txtviewlebhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/callnow"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/add_lebhi_icon"
                android:text="लेभी भर्नुहोस्"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout

                android:id="@+id/tbllayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_lebhi_icon"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:stretchColumns="4">

                <TableRow android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:text="वर्ष"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="61dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:text="महिना"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="82dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_weight="0"
                        android:text="मूल्य"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:layout_weight="0"
                        android:text="मिति"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_column="4"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0"
                        android:text="रसिद नं"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </TableRow>


            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_memdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tbllayout4" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>