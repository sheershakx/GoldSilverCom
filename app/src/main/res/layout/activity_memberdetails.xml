<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".memberdetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tbllyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="50dp"

                android:orientation="vertical"
                android:stretchColumns="1">


                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Member Id :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/memid_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="PAN :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pan_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Firm Name :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/firmname_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Address :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/address_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:text="Proprieter name :"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/proname_d"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="0"
                        android:background="@drawable/rowdesign"
                        android:fontFamily="@font/simonetta"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/callnow"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/tbllyt"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/callnow" />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/tbllyt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/smsicon2" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>