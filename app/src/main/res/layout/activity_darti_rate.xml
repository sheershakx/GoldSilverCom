<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".dartiRate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/gold">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/simonetta"
            android:text="संघद्वारा तोकिएको दर्तीको दर "
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2">
        <TableLayout
            android:id="@+id/tbllayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:stretchColumns="2">

            <TableRow android:background="@color/colorAccent">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0"
                    android:text="सि.न"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"

                    android:layout_weight="0"

                    android:text="नाम"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"

                    android:layout_weight="0"

                    android:text="दर"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/tbllayout1"
            android:id="@+id/recyclerview_dartiRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>

</LinearLayout>